{
    "env": {
        "node": {
            "presets": [
                ["@babel/env" , {
                    "targets": {
                      "node": "current"
                    }
                }]
            ]
        },
        "browser": {
            "plugins": [
                ["@babel/proposal-decorators", { "legacy": true }],
                ["@babel/proposal-class-properties", { "loose": true }],
                "@babel/syntax-dynamic-import"
            ],
            "presets": [
                [
                    "@babel/env", {
                        "modules": false
                    }
                ],
                "@babel/react"
            ]
        }
    }
}